    <para id="id4771452"/>
    <list id="id1170442632593" list-type="enumerated" number-style="arabic" mark-prefix="(" mark-suffix=")">
      <item>COMMON EMITTER CONFIGURATION</item>
    </list>
    <figure id="id1170439355034">
      <media id="id1170439355034_media" alt="">
