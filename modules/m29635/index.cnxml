    <para id="id7794438">THREE CIRCUIT CONFIGURATIONS</para>
    <list id="id1170441232488" list-type="enumerated" number-style="arabic" mark-prefix="(" mark-suffix=")">
      <item>COMMON BASE CONFIGURATION</item>
    </list>
    <figure id="id1170449748669">
