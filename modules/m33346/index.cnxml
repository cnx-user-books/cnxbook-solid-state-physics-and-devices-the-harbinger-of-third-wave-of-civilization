        <colspec colnum="5" colname="c5"/>
        <tbody>
          <row>
            <entry>Year</entry>
            <entry>Name</entry>
            <entry>No.of processors</entry>
            <entry>Capability</entry>
            <entry>Cost</entry>
          </row>
          <row>
            <entry>1976</entry>
            <entry>Illiac IV</entry>
            <entry>64</entry>
            <entry>TeraFLOPS</entry>
            <entry>480kFLOPS/million dollar</entry>
          </row>
          <row>
            <entry>1976</entry>
            <entry>Cray 1</entry>
            <entry>1</entry>
            <entry>TeraFLOPS</entry>
            <entry>17.78MFLOPS/ million dollars</entry>
          </row>
          <row>
            <entry>1988</entry>
